<main class="flex w-full">
  <div class="flex flex-col w-1/2 justify-between">
    <header class="flex items-center gap-3 p-5">
      <%= image_tag('yorch-black.png', class: 'w-10 h-10') %>
      <div class="flex flex-col">
        <h1 class="font-semibold text-sidebarTextColor text-2xl">Sales App</h1>
        <p class="font-semibold text-sidebarTextColor">Yorch Dev's</p>
      </div>
    </header>

    <section class="flex flex-col items-center justify-center">
      <div class="shadow rounded-lg border p-10 flex flex-col gap-5 w-6/12">
        <div class="flex flex-col w-full gap-3">
          <h2 class="font-semibold text-4xl text-center">Registrarme</h2>
          <p class="font-medium text-sidebarTextColor text-center text-sm">Crea tu cuenta de manera gratuita de forma rápida</p>
        </div>

        <%= form_with(model: @user, class: 'flex flex-col w-full gap-5 items-center') do |f| %>
          <div class="flex flex-col w-full items-start">
            <%= f.label :email, 'Correo electrónico:', class: 'font-bold' %>
            <%= f.email_field :email, class: "input-tailwindcss font-semibold #{ error_input_border(@user.errors.include?(:email)) }" %>
            <% if @user.errors.include?(:email) %>
              <%= render 'shared/input_error_msg', { object: @user, attribute: :email } %>
            <% end %>
          </div>

          <div class="flex flex-col w-full items-start">
            <%= f.label :password, 'Contraseña:', class: 'font-bold' %>
            <%= f.password_field :password, class: "input-tailwindcss font-semibold #{ error_input_border(@user.errors.include?(:password)) }" %>
            <span class="text-sm text-sidebarTextColor font-medium italic">La contraseña debe tener al menos 8 caracteres</span>
            <% if @user.errors.include?(:password) %>
              <%= render 'shared/input_error_msg', { object: @user, attribute: :password } %>
            <% end %>
          </div>

          <div class="flex flex-col w-full items-start">
            <%= f.label :password_confirmation, 'Confirmar contraseña:', class: 'font-bold' %>
            <%= f.password_field :password_confirmation, class: "input-tailwindcss font-semibold #{ error_input_border(@user.errors.include?(:password_confirmation)) }" %>
            <% if @user.errors.include?(:password_confirmation) %>
              <%= render 'shared/input_error_msg', { object: @user, attribute: :password_confirmation } %>
            <% end %>
          </div>

          <div class="flex flex-col w-full items-center mt-10">
            <%= f.submit "Crear cuenta", class: 'text-white py-3 rounded-lg shadow bg-black duration-300 hover:bg-gray-700 cursor-pointer font-semibold w-full text-center' %>
          </div>
        <% end %>
      </div>
    </section>
    <footer class="flex items-center justify-center gap-2 py-5">
        <p class="font-medium text-sidebarTextColor">Ya tienes una cuenta?</p>
        <%= link_to 'Iniciar sesión', login_path, class: 'font-semibold underline hover:text-cyan-700 duration-300' %>
        <i class="fa-solid fa-arrow-right-to-bracket"></i>
      </footer>
  </div>

  <div class="flex w-1/2 h-full sign-up-image"></div>
</main>
