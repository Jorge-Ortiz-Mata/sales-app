<%= form_with(model: customer, class: "flex flex-col w-full gap-10") do |form| %>

  <div class="flex justify-between gap-1 w-full">
    <div class="flex flex-col gap-1 w-6/12 items-start">
      <%= form.label :full_name, 'Nombre completo:', class: 'font-bold mb-1' %>
      <%= form.text_field :full_name, class: "input-tailwindcss font-semibold #{ error_input_border(customer.errors.include?(:full_name)) }" %>
      <% if customer.errors.include?(:full_name) %>
        <%= render 'shared/input_error_msg', { object: customer, attribute: :full_name } %>
      <% end %>
    </div>

    <div class="flex flex-col gap-1 w-6/12 items-start">
      <%= form.label :phone_number, 'Número de télefono:', class: 'font-bold mb-1' %>
      <%= form.text_field :phone_number, class: "input-tailwindcss font-semibold #{ error_input_border(customer.errors.include?(:phone_number)) }" %>
      <% if customer.errors.include?(:phone_number) %>
        <%= render 'shared/input_error_msg', { object: customer, attribute: :phone_number } %>
      <% end %>
    </div>
  </div>

  <div class="flex flex-col gap-1 w-full items-start">
    <%= form.label :address, 'Dirección:', class: 'font-bold mb-1' %>
    <%= form.text_field :address, class: "input-tailwindcss font-semibold #{ error_input_border(customer.errors.include?(:address)) }" %>
    <% if customer.errors.include?(:address) %>
      <%= render 'shared/input_error_msg', { object: customer, attribute: :address } %>
    <% end %>
  </div>

  <div class="flex items-center justify-end gap-3">
    <div class="flex items-center text-sm font-semibold">
      <%= form.submit btn_title, class: "rounded py-2 px-4 bg-green-500 text-white font-semibold cursor-pointer" %>
    </div>

    <%= link_to cancel_path, class: "flex text-sm font-semibold rounded bg-danger px-4 py-2 text-white items-center gap-1" do %>
      <span>Regresar</span>
    <% end %>
  </div>
<% end %>
