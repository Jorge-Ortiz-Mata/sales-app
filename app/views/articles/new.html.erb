<section class="flex flex-col h-full w-full">
  <%= render 'shared/navbar' do %>
    <h1 class="font-bold text-2xl text-sidebarTextColor">Nuevo articulo</h1>
  <% end %>

  <div class="flex flex-col px-2 sm:px-5 py-5 w-full">
    <div class="flex flex-col overflow-y-auto px-2 sm:px-5 py-5 gap-10 bg-white border rounded shadow">
      <%= render 'shared/breadcumb', { path: articles_path, path_text: 'Articulos', text: 'Nuevo articulo' } %>

      <%= render "form", { article: @article, btn_title: 'Crear articulo', cancel_path: articles_path } %>
    </div>
  </div>
</section>
