<div class="flex flex-col h-full w-full">
  <div class="flex flex-col overflow-y-auto p-5 gap-5">
    <div class="flex justify-between items-center">
      <h1 class="font-bold text-2xl text-sidebarTextColor"><%= @article.name %></h1>

      <div class="flex items-center gap-5">
        <%= link_to edit_article_path(@article), class: "flex text-sm font-bold rounded bg-success px-4 py-2 text-white items-center gap-2" do %>
          <span>Editar</span>
        <% end %>
        <%= button_to article_path(@article), method: :delete, form: { data: { turbo_confirm: 'Estas seguro de eliminar este articulo?' } }, class: "flex text-sm font-bold rounded bg-red-500 px-4 py-2 text-white items-center gap-2" do %>
          <span>Eliminar</span>
        <% end %>
      </div>
    </div>

    <%= render 'article', article: @article %>
  </div>
</div>
