<main class="flex w-full">
  <div class="flex w-1/2 h-full sign-in-image"></div>

  <div class="flex flex-col w-1/2 justify-between">
    <header class="flex flex-col">
      <%= render 'shared/notice' if notice %>
      <div class="flex items-center justify-start gap-3 p-5">
        <%= image_tag('yorch-black.png', class: 'w-10 h-10') %>
        <div class="flex flex-col">
          <h1 class="font-semibold text-sidebarTextColor text-2xl">Sales App</h1>
          <p class="text-sidebarTextColor text-sm">Yorch Dev's</p>
        </div>
      </div>
    </header>

    <section class="flex flex-col items-center justify-center">
      <div class="shadow rounded-lg border p-10 flex flex-col gap-5 w-6/12">
        <div class="flex flex-col w-full gap-3">
          <h2 class="font-semibold text-4xl text-center">Iniciar Sesión</h2>
          <p class="font-medium text-sidebarTextColor text-center text-sm">Ingresa tu correo y contraseña</p>
        </div>

        <%= form_with(model: @session_form, url: login_path, class: 'flex flex-col w-full gap-5 items-center') do |f| %>
          <div class="flex flex-col w-full items-start">
            <%= f.label :email, 'Correo electrónico', class: 'font-bold' %>
            <%= f.email_field :email, class: "input-tailwindcss font-semibold #{ error_input_border(@session_form.errors.include?(:email)) }" %>
            <% if @session_form.errors.include?(:email) %>
              <%= render 'shared/input_error_msg', { object: @session_form, attribute: :email } %>
            <% end %>
          </div>

          <div class="flex flex-col w-full items-start">
            <%= f.label :password, 'Contraseña', class: 'font-bold' %>
            <%= f.password_field :password, class: "input-tailwindcss font-semibold #{ error_input_border(@session_form.errors.include?(:password)) }" %>
            <% if @session_form.errors.include?(:password) %>
              <%= render 'shared/input_error_msg', { object: @session_form, attribute: :password } %>
            <% end %>
          </div>

          <div class="flex flex-col w-full items-center mt-10">
            <%= f.submit "Iniciar sesión", class: 'text-white py-3 rounded-lg shadow bg-black duration-300 hover:bg-gray-700 cursor-pointer font-semibold w-full text-center' %>
          </div>
        <% end %>
      </div>
    </section>

     <footer class="flex items-center justify-center gap-2 py-5">
      <p class="font-medium text-sidebarTextColor">¿Eres nuevo? Crea tu cuenta de manera gratuita</p>
      <%= link_to 'Registrarme', signup_path, class: 'font-semibold underline hover:text-cyan-700 duration-300' %>
      <i class="fa-solid fa-arrow-right-to-bracket"></i>
    </footer>
  </div>
</main>
