<section data-controller="modal" id="modal-section" class="top-0 left-0 fixed flex w-full h-full items-center justify-center bg-gray-700/50 z-10">
  <div class="flex flex-col bg-white w-1/2 rounded-lg">
    <div class="flex items-center justify-between bg-gray-200 p-3 w-full rounded-t-lg">
      <h2 class="text-sidebarTextColor text-lg font-bold ">
        <%= title %>
      </h2>
      <i data-action="click->modal#closeModal" class="fa-regular fa-circle-xmark text-2xl text-sidebarTextColor cursor-pointer"></i>
    </div>
    <div class="flex flex-col w-full py-5 px-3">
      <%= yield %>
    </div>
  </div>
</section>
