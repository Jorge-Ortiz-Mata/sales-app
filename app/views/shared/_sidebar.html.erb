<div class="flex flex-col justify-between gap-10 h-full px-5 py-10 fixed w-2/12 shadow border">
  <%= link_to root_path, class: 'flex items-center gap-5' do %>
    <%= image_tag('yorch-black.png', class: 'w-10 h-10') %>
    <div class="flex flex-col gap-0">
      <h2 class="font-semibold text-sidebarTextColor text-xl">Sales App</h2>
      <p class="text-xs font-medium text-sidebarTextColor">Yorch Dev's</p>
    </div>
  <% end %>

  <ul class="flex flex-col w-full">
    <li class="flex items-center w-full">
      <%= link_to root_path, class: style_to_sidebar_link(root_path) do %>
        <i class="fa-solid fa-house"></i>
        <span>Dashboard</span>
      <% end %>
    </li>

    <li class="flex items-center w-full">
      <%= link_to articles_path, class: style_to_sidebar_link(articles_path) do %>
        <i class="fa-solid fa-warehouse"></i>
        <span>Articulos</span>
      <% end %>
    </li>

    <li class="flex items-center w-full">
      <%= link_to sells_path, class: style_to_sidebar_link(sells_path) do %>
        <i class="fa-solid fa-sack-dollar"></i>
        <span>Ventas</span>
      <% end %>
    </li>

    <li class="flex items-center w-full">
      <%= link_to categories_path, class: style_to_sidebar_link(categories_path) do %>
        <i class="fa-solid fa-shapes"></i>
        <span>Categorias</span>
      <% end %>
    </li>

    <li class="flex items-center">
      <%= link_to settings_path, class: style_to_sidebar_link(settings_path) do %>
        <i class="fa-solid fa-gear"></i>
        <span>Configuración</span>
      <% end %>
    </li>

    <li class="flex items-center">
      <%= link_to user_path(current_user.token_id), class: style_to_sidebar_link(user_path(current_user.token_id)) do %>
        <i class="fa-solid fa-user"></i>
        <span>Perfil</span>
      <% end %>
    </li>
  </ul>

  <% if current_user %>
    <div class="flex flex-col">
      <h6 class="font-bold">--</h6>
      <p class="font-medium text-sm"><%= current_user.email %></p>
      <%= button_to logout_path, method: :delete do  %>
        Cerrar sesión
      <% end %>
    </div>
  <% end %>
</div>

