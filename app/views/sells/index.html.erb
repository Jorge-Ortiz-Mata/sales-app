<div class="flex flex-col h-full w-full">
  <%= render 'shared/navbar' do %>
    <h1 class="font-bold text-2xl text-sidebarTextColor">Ventas</h1>

    <%= link_to new_sell_path, class: "flex text-sm font-bold rounded bg-success px-4 py-2 text-white items-center gap-2" do %>
      <span>AÃ±adir venta</span>
      <i class="fa-solid fa-plus text-base"></i>
    <% end %>

  <% end %>
  <div class="flex flex-col overflow-y-auto p-5 gap-5 m-5 bg-white border rounded shadow">
    <% if @sells.any? %>
      <div class="flex flex-col w-full gap-2">
        <div class="flex w-full bg-gray-100 rounded">
          <div class="w-1/12 p-1 font-bold text-sidebarTextColor">ID</div>
          <div class="w-3/12 p-1 font-bold text-sidebarTextColor">Articulo</div>
          <div class="w-1/12 p-1 font-bold text-sidebarTextColor">Dia</div>
          <div class="w-2/12 p-1 font-bold text-sidebarTextColor">Fecha</div>
          <div class="w-1/12 p-1 font-bold text-sidebarTextColor">Cantidad</div>
          <div class="w-2/12 p-1 font-bold text-sidebarTextColor">Precio unitario</div>
          <div class="w-2/12 p-1 font-bold text-sidebarTextColor">Total</div>
        </div>

        <div class="flex flex-col w-full">
          <% @sells.each do |sell| %>
            <%= link_to sell_path(sell), class: 'flex items-center w-full hover:bg-gray-100 p-1 duration-300 border-b' do %>
              <div class="font-semibold text-sm text-sidebarTextColor p-1 w-1/12"><%= sell.id %></div>
              <div class="font-semibold text-sm text-sidebarTextColor p-1 w-3/12"><%= sell.article.name[0..25] %>...</div>
              <div class="font-semibold text-sm text-sidebarTextColor p-1 w-1/12"><%= sell.day.humanize %></div>
              <div class="font-semibold text-sm text-sidebarTextColor p-1 w-2/12"><%= I18n.l(sell.date_of_sell.to_time, format: :long) %></div>
              <div class="font-semibold text-sm text-sidebarTextColor p-1 w-1/12"><%= sell.quantity %></div>
              <div class="font-semibold text-sm text-sidebarTextColor p-1 w-2/12">$ <%= number_with_delimiter(sell.article.price, :delimiter => ',') %> MXN</div>
              <div class="font-semibold text-sm text-sidebarTextColor p-1 w-2/12">$ <%= number_with_delimiter(sell.total_revenue, :delimiter => ',') %> MXN</div>
            <% end %>
          <% end %>
        </div>
      </div>
    <% else %>
      <p class="font-semibold">No hay ninguna venta por el momento.</p>
    <% end %>
  </div>
</div>
