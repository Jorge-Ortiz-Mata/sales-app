<%= form_with(model: sell, class: "flex flex-col w-full gap-5") do |form| %>
  <div class="flex items-start gap-2">
    <div class="flex flex-col gap-1 w-6/12 items-start">
      <%= form.label :article_id, 'Seleccionar articulo:', class: 'font-bold mb-1' %>
      <%= form.select(:article_id, Article.all.map { |option| [option.name, option.id] },
          { include_blank: true },
          { class: "input-tailwindcss #{ error_input_border(sell.errors.include?(:article)) }", id: 'select_name'
        }) %>
      <% if sell.errors.include?(:article) %>
        <% sell.errors.full_messages_for(:article).each do |message| %>
          <span class="text-sm font-semibold text-danger"><%= message %></span>
        <% end %>
      <% end %>
    </div>

    <div class="flex flex-col gap-1 w-6/12 items-start">
      <%= form.label :quantity, 'Cantidad:', class: 'font-bold mb-1' %>
      <%= form.number_field :quantity, class: "input-tailwindcss #{ error_input_border(sell.errors.include?(:quantity)) }" %>
      <% if sell.errors.include?(:quantity) %>
        <% sell.errors.full_messages_for(:quantity).each do |message| %>
          <span class="text-sm font-semibold text-danger"><%= message %></span>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="flex items-start gap-2">
    <div class="flex flex-col gap-1 w-6/12 items-start">
      <%= form.label :day, 'Dia:', class: 'font-bold mb-1' %>
      <%= form.select(:day, Sell::DAYS.map { |option| [option.humanize, option] },
          { include_blank: true },
          { class: "input-tailwindcss #{ error_input_border(sell.errors.include?(:day)) }", id: 'select_name'
        }) %>
      <% if sell.errors.include?(:day) %>
        <% sell.errors.full_messages_for(:day).each do |message| %>
          <span class="text-sm font-semibold text-danger"><%= message %></span>
        <% end %>
      <% end %>
    </div>

    <div class="flex flex-col gap-1 w-6/12 items-start">
      <%= form.label :date_of_sell, 'Fecha de venta:', class: 'font-bold mb-1' %>
      <%= form.date_field :date_of_sell, class: "input-tailwindcss #{ error_input_border(sell.errors.include?(:date_of_sell)) }" %>
      <% if sell.errors.include?(:date_of_sell) %>
        <% sell.errors.full_messages_for(:date_of_sell).each do |message| %>
          <span class="text-sm font-semibold text-danger"><%= message %></span>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="flex flex-col gap-1 items-start">
    <%= form.label :comment, 'Comentario (opcional):', class: 'font-bold mb-1' %>
    <%= form.text_field :comment, class: "input-tailwindcss #{ error_input_border(sell.errors.include?(:comment)) }" %>
    <% if sell.errors.include?(:comment) %>
      <% sell.errors.full_messages_for(:comment).each do |message| %>
        <span class="text-sm font-semibold text-danger"><%= message %></span>
      <% end %>
    <% end %>
  </div>

  <div class="flex items-center justify-end gap-3">
    <div class="flex items-center text-sm font-semibold">
      <%= form.submit btn_title, class: "rounded py-2 px-4 bg-green-500 text-white font-semibold cursor-pointer" %>
    </div>

    <%= link_to cancel_path, class: "flex text-sm font-semibold rounded bg-danger px-4 py-2 text-white items-center gap-1" do %>
      <span>Regresar</span>
    <% end %>
  </div>
<% end %>
