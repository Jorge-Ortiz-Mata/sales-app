<div class="flex flex-col w-full gap-3 bg-slate-50 border shadow rounded p-5">
  <div class="flex gap-2 items-center full">
    <span class="font-regular text-sidebarTextColor">Nombre del articulo:</span>
    <%= link_to article_path(sell.article) do %>
      <span class="font-bold text-cyan-600 underline"><%= sell.article.name %></span>
    <% end %>
  </div>

  <div class="flex items-center gap-1">
    <div class="flex gap-2 items-center w-3/12">
      <span class="font-regular text-sidebarTextColor">Precio unitario:</span>
      $<span class="font-semibold"><%= number_with_delimiter(sell.article.price, :delimiter => ',') %></span> MXN
    </div>

    <div class="flex gap-2 items-center w-3/12">
      <span class="font-regular text-sidebarTextColor">Total:</span>
      $<span class="font-semibold"><%= number_with_delimiter(sell.total_revenue, :delimiter => ',') %></span> MXN
    </div>

    <div class="flex gap-2 items-center w-3/12">
      <span class="font-regular text-sidebarTextColor">Categoria(s):</span>
      <% sell.article.categories.each do |category| %>
        <span class="text-xs border border-gray-700 px-1.5 py-0.5 rounded"><%= category.name %></span>
      <% end %>
    </div>
  </div>

  <div class="flex items-center gap-1">
    <div class="flex gap-2 items-center w-3/12">
      <span class="font-regular text-sidebarTextColor">ID de la venta:</span>
      <span class="font-semibold"><%= sell.id %></span>
    </div>

    <div class="flex gap-2 items-center w-3/12">
      <span class="font-regular text-sidebarTextColor">Cantidad de articulos vendidos:</span>
      <span class="font-semibold"><%= sell.quantity %></span>
    </div>

    <div class="flex gap-2 items-center w-3/12">
      <span class="font-regular text-sidebarTextColor">Dia de la venta:</span>
      <span class="font-semibold"><%= sell.day.humanize %></span>
    </div>

    <div class="flex gap-2 items-center w-3/12">
      <span class="font-regular text-sidebarTextColor">Fecha de la venta:</span>
      <span class="font-semibold"><%= sell.date_of_sell %></span>
    </div>
  </div>


  <div class="flex flex-col">
    <span class="font-regular text-sidebarTextColor">Comentario de la venta (opcional):</span>
    <span class="font-semibold"><%= sell.comment %></span>
  </div>
</div>
