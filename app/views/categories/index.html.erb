<div class="flex flex-col h-full w-full">
  <div class="flex flex-col overflow-y-auto p-5 gap-5">
    <div class="flex justify-between items-start">
      <h1 class="font-bold text-2xl text-sidebarTextColor">Categorias</h1>

      <%= turbo_frame_tag 'new_category', class: 'flex items-center' do %>
        <%= link_to new_category_path, class: "flex text-sm font-bold rounded bg-success px-4 py-2 text-white items-center gap-2" do %>
          <span>Añadir categoría</span>
          <i class="fa-solid fa-plus text-base"></i>
        <% end %>
      <% end %>
    </div>

    <div class="flex flex-col w-full rounded border shadow p-5 gap-2">
      <div class="flex w-full bg-gray-100 rounded">
        <div class="w-2/12 p-1 font-bold text-sidebarTextColor">ID</div>
        <div class="w-4/12 p-1 font-bold text-sidebarTextColor">Nombre</div>
        <div class="w-4/12 p-1 font-bold text-sidebarTextColor">Fecha de creación</div>
        <div class="w-1/12 p-1 font-bold text-sidebarTextColor ">Editar</div>
        <div class="w-1/12 p-1 font-bold text-sidebarTextColor ">Eliminar</div>
      </div>

      <div class="flex flex-col w-full" id="categories">
        <% @categories.each do |category| %>
          <%= render category %>
        <% end %>
      </div>
    </div>
  </div>
</div>
