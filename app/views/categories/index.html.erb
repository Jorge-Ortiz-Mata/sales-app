<div class="flex flex-col h-full w-full">
  <%= render 'shared/navbar' do %>
    <h1 class="font-bold text-2xl text-sidebarTextColor">Categorias</h1>

    <%= turbo_frame_tag 'new_category', class: 'flex items-center' do %>
      <%= link_to new_category_path, class: "flex text-sm font-bold rounded bg-success px-4 py-2 text-white items-center gap-2" do %>
        <span>Añadir categoría</span>
        <i class="fa-solid fa-plus text-base"></i>
      <% end %>
    <% end %>
  <% end %>

  <%= render 'categories', categories: @categories %>
</div>
