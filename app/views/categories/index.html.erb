<div class="flex flex-col h-full w-full">
  <%= render 'shared/navbar' do %>
    <h1 class="font-bold text-2xl text-sidebarTextColor">Categorias</h1>

    <%= turbo_frame_tag 'new_category', class: 'hidden lg:flex items-center' do %>
      <%= link_to new_category_path, class: "flex text-sm font-bold rounded bg-success px-4 py-2 text-white items-center gap-2" do %>
        <span>Añadir categoría</span>
        <i class="fa-solid fa-plus text-base"></i>
      <% end %>
    <% end %>
  <% end %>

   <div class="flex flex-col w-full h-full px-2 py-5 sm:px-5">
    <% if @categories.any? %>
        <%= render 'categories', categories: @categories %>
      </div>
    <% else %>
      <div id="categories" class="flex flex-col w-full h-full items-center justify-center gap-10">
        <i class="fa-solid fa-shapes text-[120px] sm:text-[190px] text-sidebarTextColor"></i>
        <div class="flex flex-col">
          <h5 class="font-semibold text-lg text-sidebarTextColor text-center">Ningún articulo en existencia.</h5>
          <p class="text-sidebarTextColor text-center gap-2">
            Actualmente no cuentas con ningún artículo en existencia.
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>
