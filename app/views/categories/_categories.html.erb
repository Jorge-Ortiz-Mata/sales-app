<%= render 'categories/responsive/categories',  { categories: categories } %>

<% if categories.any? %>
  <div id="categories" class="hidden md:flex flex-col w-full">
    <div class="flex flex-col w-full gap-2">
      <div class="flex w-full bg-gray-100 rounded">
        <div class="w-1/12 p-1 font-bold text-sm lg:text-base text-sidebarTextColor">ID</div>
        <div class="w-5/12 p-1 font-bold text-sm lg:text-base text-sidebarTextColor">Nombre</div>
        <div class="w-4/12 p-1 font-bold text-sm lg:text-base text-sidebarTextColor">Fecha de creación</div>
        <div class="w-2/12 p-1 font-bold text-sm lg:text-base text-sidebarTextColor text-center">Opciones</div>
      </div>

      <div class="flex flex-col w-full">
        <% categories.each do |category| %>
          <%= render category %>
        <% end %>
      </div>
    </div>
  </div>
<% else %>
  <div id="categories" class="hidden md:flex flex-col w-full h-full items-center justify-center gap-10">
    <i class="fa-solid fa-shapes text-[190px] text-sidebarTextColor"></i>
    <div class="flex flex-col">
      <h5 class="font-semibold text-lg text-sidebarTextColor text-center">Ningún articulo en existencia.</h5>
      <p class="text-sidebarTextColor">
        Actualmente no cuentas con ningún artículo en existencia.
      </p>
    </div>
  </div>
<% end %>
