<% if categories.any? %>
  <div class="flex flex-col overflow-y-auto p-5 gap-5 m-5 bg-white border rounded shadow">

    <div class="flex flex-col w-full gap-2" id="categories">
      <div class="flex w-full bg-gray-100 rounded">
        <div class="w-1/12 p-1 font-bold text-sidebarTextColor">ID</div>
        <div class="w-5/12 p-1 font-bold text-sidebarTextColor">Nombre</div>
        <div class="w-4/12 p-1 font-bold text-sidebarTextColor">Fecha de creación</div>
        <div class="w-1/12 p-1 font-bold text-sidebarTextColor ">Editar</div>
        <div class="w-1/12 p-1 font-bold text-sidebarTextColor ">Eliminar</div>
      </div>

      <div class="flex flex-col w-full">
        <% categories.each do |category| %>
          <%= render category %>
        <% end %>
      </div>
    </div>
  </div>
<% else %>
  <div id="categories" class="flex flex-col p-5 rounded shadow border w-full h-full items-center justify-center gap-10">
    <i class="fa-solid fa-shapes text-[190px] text-sidebarTextColor"></i>
    <div class="flex flex-col">
      <h5 class="font-semibold text-lg text-sidebarTextColor text-center">Ningún articulo en existencia.</h5>
      <p class="text-sidebarTextColor">
        Actualmente no cuentas con ningún artículo en existencia.
      </p>
    </div>
  </div>
<% end %>
