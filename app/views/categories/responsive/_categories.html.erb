<% if categories.any? %>
  <div id="categories" class="flex md:hidden flex-col w-full">
    <div class="flex flex-col w-full gap-2">
      <div class="flex w-full bg-gray-100 rounded">
        <div class="w-9/12 p-1 font-bold text-sidebarTextColor">Nombre</div>
        <div class="w-3/12 p-1 font-bold text-sidebarTextColor text-center">Opciones</div>
      </div>

      <div class="flex flex-col w-full">
        <% categories.each do |category| %>
          <%= turbo_frame_tag "category_#{category.id}", class: 'flex w-full hover:bg-gray-100 duration-300 border-b py-1' do %>
            <div class="font-semibold text-xs sm:text-sm text-sidebarTextColor p-1 w-9/12"><%= category.name %></div>
            <div class="font-semibold text-xs sm:text-sm text-sidebarTextColor p-1 w-3/12 flex items-center justify-center gap-5">
              <%= link_to edit_category_path(category) do %>
                <i class="fa-solid fa-pen-to-square font-semibold text-primary"></i>
              <% end %>

              <%= button_to category_path(category), method: :delete, form: { data: { turbo_confirm: 'Estas seguro de eliminar esta categoría?' } } do %>
                <i class="fa-solid fa-trash font-semibold text-danger"></i>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
<% else %>
  <div id="categories" class="flex md:hidden flex-col p-5 rounded shadow border w-full h-full items-center justify-center gap-10">
    <i class="fa-solid fa-shapes text-[190px] text-sidebarTextColor"></i>
    <div class="flex flex-col">
      <h5 class="font-semibold text-lg text-sidebarTextColor text-center">Ningún articulo en existencia.</h5>
      <p class="text-sidebarTextColor">
        Actualmente no cuentas con ningún artículo en existencia.
      </p>
    </div>
  </div>
<% end %>
