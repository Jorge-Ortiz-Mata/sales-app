<%= turbo_frame_tag 'admin_edit_user' do %>
  <%= render 'shared/modal', { title: 'Editar usuario' } do %>
    <div class="flex items-start w-full" >
      <ul class="flex flex-col w-3/12" data-controller="admin">
        <li data-action="click->admin#showAccountForm" class="cursor-pointer py-2 hover:bg-slate-100 duration-300 font-semibold text-sidebarTextColor px-5 border-b border-slate-200">
          Editar cuenta
        </li>
        <li data-action="click->admin#showProfileForm" class="cursor-pointer py-2 hover:bg-slate-100 duration-300 font-semibold text-sidebarTextColor px-5">
          Editar perfil
        </li>
      </ul>
      <div class="flex flex-col w-9/12 py-2 px-5 border-l border-slate-200">
        <%= render 'admin/users/forms/edit_account', { user: @admin_user, state: '' } %>
        <%= render 'admin/users/forms/edit_profile', { user: @admin_user_profile, state: 'hidden' } %>
      </div>
    </div>
  <% end %>
<% end %>
