<div class="flex lg:hidden flex-col gap-2">
  <div class="flex w-full bg-gray-100 rounded px-5">
    <div class="w-5/12 text-sidebarTextColor text-sm lg:text-base font-bold">Articulo</div>
    <div class="w-2/12 text-sidebarTextColor text-sm lg:text-base font-bold text-center">Cantidad</div>
    <div class="w-5/12 text-sidebarTextColor text-sm lg:text-base font-bold text-end">Ganancias</div>
  </div>
  <div class="flex flex-col w-full gap-2 px-5">
    <% sell.article_sells.order(created_at: :asc).each do |article_sell| %>
      <div class="flex items-center">
        <div class="w-5/12 text-sidebarTextColor text-xs sm:text-sm lg:text-base font-bold">
          <%= article_sell.article.name %>
        </div>
        <div class="w-2/12 text-sidebarTextColor text-xs sm:text-sm lg:text-base font-bold text-center">
          <%= article_sell.quantity %>
        </div>
        <div class="w-5/12 text-sidebarTextColor text-xs sm:text-sm lg:text-base font-bold text-end">
          $ <%= number_with_delimiter(article_sell.revenue.round(2), :delimiter => ',') %> MXN
        </div>
      </div>
    <% end %>
  </div>
</div>
